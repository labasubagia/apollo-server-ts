{
  "name": "apollo-ts",
  "version": "1.0.0",
  "description": "Learn to make apollo server with typescript",
  "main": "index.js",
  "scripts": {
    "graphql:codegen": "graphql-codegen",
    "prebuild": "npm run graphql:codegen",
    "build": "webpack --config webpack.$NODE_ENV.ts",
    "build:prod": "NODE_ENV=production npm run build",
    "build:dev": "NODE_ENV=development npm run build",
    "start:ts": "ts-node src/main",
    "start": "node dist/server",
    "watch": "nodemon dist/server",
    "test": "jest"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@types/mongodb": "^3.5.31",
    "@types/node": "^14.14.5",
    "@types/webpack": "^4.41.23",
    "@types/webpack-env": "^1.15.3",
    "@types/webpack-node-externals": "^2.5.0",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "apollo-server-testing": "^2.18.2",
    "clean-webpack-plugin": "^3.0.0",
    "eslint": "^7.12.1",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.14.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "jest": "^26.6.1",
    "jest-transform-graphql": "^2.1.0",
    "lint-staged": "^10.5.0",
    "nodemon": "^2.0.6",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.3",
    "ts-loader": "^8.0.7",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5",
    "webpack": "^5.3.0",
    "webpack-cli": "^4.1.0",
    "webpack-merge": "^5.2.0",
    "webpack-node-externals": "^2.5.2"
  },
  "dependencies": {
    "@graphql-codegen/typescript": "^1.17.11",
    "@graphql-codegen/typescript-mongodb": "^1.17.8",
    "@test-graphql-cli/codegen": "^4.0.1-beta.2",
    "apollo-server": "^2.18.2",
    "dotenv": "^8.2.0",
    "graphql": "^15.4.0",
    "graphql-cli": "^4.1.0",
    "graphql-scalars": "^1.4.1",
    "mongodb": "^3.6.2"
  },
  "jest": {
    "transform": {
      "\\.(gql|graphql)$": "jest-transform-graphql",
      ".*": "babel-jest"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "npx prettier --write",
      "eslint src/**/*.ts --fix-dry-run"
    ]
  }
}
